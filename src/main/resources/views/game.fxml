<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.myapp.controllers.GameController" 
            styleClass="fullscreen-game" prefWidth="1920" prefHeight="1080">
    
    <!-- Header avec informations du jeu -->
    <top>
        <VBox spacing="0">
            <!-- Barre de titre avec bouton de fermeture -->
            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: rgba(0,0,0,0.9); -fx-padding: 10;">
                <Button text="✕" onAction="#onBack" styleClass="close-button" 
                        style="-fx-background-color: #ff4757; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 50%; -fx-border-radius: 50%; -fx-border-color: white; -fx-border-width: 2; -fx-min-width: 35; -fx-min-height: 35; -fx-pref-width: 35; -fx-pref-height: 35;" />
            </HBox>
            
            <!-- Informations du jeu -->
            <HBox spacing="40" alignment="CENTER" styleClass="game-header">
                <padding>
                    <Insets top="20" right="40" bottom="20" left="40" />
                </padding>
                <Label fx:id="lblAttempts" text="Attempts: 0" styleClass="game-info-label" />
                <Label fx:id="lblTime" text="Time: 0s" styleClass="game-info-label" />
            </HBox>
        </VBox>
    </top>
    
    <!-- Zone de jeu centrée -->
    <center>
        <VBox alignment="CENTER" styleClass="game-container" spacing="0" prefWidth="Infinity" maxWidth="Infinity">
            <StackPane styleClass="game-area" prefWidth="Infinity" maxWidth="Infinity">
                <GridPane fx:id="grid" styleClass="grid-pane" alignment="CENTER" prefWidth="Infinity" maxWidth="Infinity" />
            </StackPane>
        </VBox>
    </center>
    
    <!-- Contrôles en bas -->
    <bottom>
        <HBox spacing="40" alignment="CENTER" styleClass="game-controls">
            <padding>
                <Insets top="20" right="40" bottom="30" left="40" />
            </padding>
            <Button fx:id="btnNew" text="New Game" onAction="#onNewGame" styleClass="game-button" />
            <Button fx:id="btnBack" text="Back to Menu" onAction="#onBack" styleClass="game-button" />
        </HBox>
    </bottom>
    
</BorderPane>
